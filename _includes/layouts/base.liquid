<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-TH1PNWMT83"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag('js', new Date());

      gtag('config', 'G-TH1PNWMT83');
    </script>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <link rel="stylesheet" href="/styles/bundle.css">
    <link rel="icon" href="/img/favicon.ico">

    <title>{{ title | default: default-meta.title }}</title>

    <meta property="og:title" content="{{ title | default: default-meta.title }}">
    <meta property="og:type" content="article" />
    <meta property="og:image" content="{{ thumbnail | default: default-meta.thumbnail | prepend: default-meta.baseUrl  }}">
    <meta property="og:url" content="{{ permalink | prepend: default-meta.baseUrl }}">
    <meta property="og:description" content="{{ description | default: default-meta.description }}">
    <meta property="og:site_name" content="Gabriel Toschi">
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:image:alt" content="{{ title | default: default-meta.title }}">
  </head>

  <body>
    {% render "components/header" %}

    <div>
      {{ content }}
    </div>

    {% render "components/footer" %}
  </body>
</html>