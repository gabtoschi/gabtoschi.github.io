---
layout: 'layouts/base'
---

<div class="post">
  <div class="header">
    <div class="header-image" style="background-image: url({{ thumbnail }})"></div>
  </div>

  <div id="post-content" class="post-content container">
    {{ content }}
  </div>

  {% if lang == 'en' %}
    <div class="newsletter-wrapper container">
      {% render "components/newsletter" %}
    </div>
  {% endif %}

  <div class="post-end-wrapper">
    <div class="post-end container">
      <div class="previous-post">
        <span>want to play my games?</span>
        <h2>
          <a href="/#projects">see my projects!</a>
        </h2>
      </div>

      <div class="next-post">
        <span>want to read?</span>
        <h2>
          <a href="/">go to my blog!</a>
        </h2>
      </div>
    </div>
  </div>

</div>

<script type="text/javascript" src="/scripts/external-links.js"></script>